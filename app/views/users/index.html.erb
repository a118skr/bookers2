
<main>
<p id="notice"></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>

      <div class='col-md-3'>
        <%= render 'books/userinfo', user: @user, book: @book %>
      </div>

      <div class='col-md-8 offset-md-1'>
        <h2>Users</h2>
        <table class='table'>
          <thead>
            <tr>
              <td><p>Image</p></td>
              <td><p>Name</p></td>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100, 100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>